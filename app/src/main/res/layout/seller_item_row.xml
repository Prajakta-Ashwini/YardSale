<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivYardSaleCoverPic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYardSaleDescription"
        android:layout_toRightOf="@+id/ivYardSaleCoverPic"
        android:layout_toEndOf="@+id/ivYardSaleCoverPic"
        android:text="Description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYardSaleLocation"
        android:layout_below="@+id/tvYardSaleDescription"
        android:layout_alignLeft="@+id/tvYardSaleDescription"
        android:layout_alignStart="@+id/tvYardSaleDescription"/>
</RelativeLayout>