<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.yardsale.activities.SignUpActivity">

    <ImageView
        android:id="@id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:src="@drawable/login_background_1"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="168dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#ffffff" />

    <EditText
        android:id="@+id/etSignUpUserName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:hint="User Name" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:onClick="onBack"
        android:layout_alignStart="@id/textView"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Login"
        android:textColor="@color/image_foreground_color"
        android:clickable="true"
        android:onClick="onLogin"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_alignEnd="@id/textView"
        android:background="@android:color/transparent" />

    <EditText
        android:id="@+id/etSignUpPassword"
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSignUpUserName"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etSignUpPasswordRetype"
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSignUpPassword"
        android:layout_centerHorizontal="true"
        android:hint="Re-enter Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSaveUser"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/image_foreground_color"
        android:layout_below="@+id/etSignUpPasswordRetype"
        android:layout_centerHorizontal="true"
        android:text="Sign up" />

    <ImageButton
        android:id="@+id/btnLoginWithFB"
        android:layout_width="wrap_content"
        android:layout_below="@id/btnSaveUser"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/btnSaveUser"
        android:layout_alignEnd="@id/btnSaveUser"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_facebook_button"
        android:scaleType="fitCenter"
        android:background="@null"
        android:text="Login With Facebook" />
</RelativeLayout>
