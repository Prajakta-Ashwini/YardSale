<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="top"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/userPersonalSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivUserProfilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivUserProfilePic"
            android:gravity="center"
            android:text="User name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/userPersonalSection"
        android:layout_centerVertical="true"
        android:background="#BDBDBD" />


    <RelativeLayout
        android:id="@+id/rlUserIconSection"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/line1">

        <TextView
            android:id="@+id/tvWishList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_like"
            android:clickable="true" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvWishList"
            android:layout_marginEnd="75dp"
            android:background="@drawable/ic_setting_light" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignBottom="@id/rlUserIconSection"
        android:layout_centerVertical="true"
        android:background="#BDBDBD" />

</RelativeLayout>