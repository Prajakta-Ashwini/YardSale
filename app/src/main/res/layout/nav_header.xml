<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProfileBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/yardsale_blur" />

    <ImageView
        android:id="@+id/ivUserProfilePic"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivUserProfilePic"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="User name"
        android:textSize="16sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tvUserName"
        android:layout_marginTop="5dp"
        android:background="#BDBDBD" />

    <TextView
        android:id="@+id/tvWishList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/line1"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_like"
        android:clickable="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/tvSettings"
        android:layout_alignBottom="@id/tvWishList"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tvWishList"
        android:layout_marginEnd="70dp"
        android:background="@drawable/ic_settings_green" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tvWishList"
        android:layout_marginTop="10dp"
        android:background="#BDBDBD" />

</RelativeLayout>