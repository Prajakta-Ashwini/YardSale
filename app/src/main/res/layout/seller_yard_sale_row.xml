<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ivYardSaleCoverPic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYardSaleDescription"
        android:layout_toEndOf="@+id/ivYardSaleCoverPic"
        android:text="Description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYardLocation"
        android:layout_below="@+id/tvYardSaleDescription"
        android:layout_alignStart="@+id/tvYardSaleDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYardSaleTime"
        android:layout_below="@+id/tvYardLocation"
        android:layout_alignStart="@+id/tvYardLocation"/>

    <!--<Button-->
        <!--style="?android:attr/buttonStyleSmall"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:id="@+id/btnAddItem"-->
        <!--android:background="@drawable/ic_add_item"-->
        <!--android:layout_below="@+id/tvYardSaleTime"-->
        <!--android:layout_centerHorizontal="true" />-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btnEditYS"
        android:background="@drawable/ic_item_edit"
        android:layout_marginEnd="100dp"
        android:layout_below="@+id/tvYardSaleTime"
        android:layout_toStartOf="@+id/btnDeleteYS" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btnDeleteYS"
        android:background="@drawable/ic_delete"
        android:layout_alignTop="@+id/btnEditYS"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>