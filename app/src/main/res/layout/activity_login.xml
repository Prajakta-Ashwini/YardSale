<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.yardsale.activities.LoginActivity">


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="112dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:onClick="onBack"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

    <TextView
        android:id="@+id/tvSignUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="onSignUp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/image_foreground_color"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:hint="User name"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignEnd="@id/etPassword"
        android:layout_alignStart="@id/etPassword"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/image_foreground_color"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnLoginWithFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/btnLogin"
        android:layout_alignStart="@id/btnLogin"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:onClick="loginWithFB"
        android:scaleType="fitCenter"
        android:src="@drawable/login_facebook_button"
        android:text="Login with Facebook" />

</RelativeLayout>
