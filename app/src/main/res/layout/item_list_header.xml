<RelativeLayout
    android:id="@+id/rlOuter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/yardsale_blur"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <!--<ImageView-->
            <!--android:id="@+id/background_image"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="300dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/yardsale_blur" />-->

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="title"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ivUserPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/com_facebook_profile_picture_blank_square" />

        <TextView
            android:id="@+id/tvSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivUserPic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Hosted by seller" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/tvSeller"
            android:background="@color/image_foreground_color"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <ImageView
            android:id="@+id/ivLocationImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/line1"
            android:layout_marginLeft="100dp"
            android:src="@drawable/ic_maps" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line2"
            android:layout_alignEnd="@+id/ivLocationImage"
            android:gravity="center"
            android:hint="address" />


        <ImageView
            android:id="@+id/ivImageOfTime"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/line1"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@+id/ivLocationImage"
            android:src="@drawable/ic_time_left" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ivImageOfTime"
            android:layout_below="@+id/ivImageOfTime"
            android:text="in 4 days" />

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/tvDateTime"
            android:background="@color/image_foreground_color" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="new sale"/>

        <TextView
            android:id="@+id/tvCompleteTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tvDescription"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

